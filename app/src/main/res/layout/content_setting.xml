<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/setting_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_block"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_textViewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务历史"/>

            <net.nineoneww.mobile.widget.IconFontTextView
                android:id="@+id/textViewHistory_fontIcon"
                style="@style/fontIcon_arrow"
                app:fontFile="@string/font_file"
                app:value="@string/icon_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/ly_textViewHistory"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑资料"/>
            <net.nineoneww.mobile.widget.IconFontTextView
                android:id="@+id/textViewProfile_fontIcon"
                style="@style/fontIcon_arrow"
                app:fontFile="@string/font_file"
                app:value="@string/icon_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_group1"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_block"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="账号设置"/>
        <net.nineoneww.mobile.widget.IconFontTextView
            android:id="@+id/textViewAccount_fontIcon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            style="@style/fontIcon_arrow"
            app:fontFile="@string/font_file"
            app:value="@string/icon_arrow"/>

        <TextView
            android:id="@+id/textViewSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAccount"
            android:layout_alignLeft="@+id/textViewAccount"
            android:layout_alignStart="@+id/textViewAccount"
            android:text="系统设置"/>
        <net.nineoneww.mobile.widget.IconFontTextView
            android:id="@+id/textViewSystem_fontIcon"
            android:layout_below="@+id/textViewAccount"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            style="@style/fontIcon_arrow"
            app:fontFile="@string/font_file"
            app:value="@string/icon_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/setting_group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_group2"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_block"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换设置"/>
        <net.nineoneww.mobile.widget.IconFontTextView
            android:id="@+id/textViewExchange_fontIcon"
            style="@style/fontIcon_arrow"
            app:fontFile="@string/font_file"
            app:value="@string/icon_arrow" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTermOfUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户协议"/>

</RelativeLayout>