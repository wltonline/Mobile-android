<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ly_top_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/divider_bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/book_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book_img"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="人生在于折腾"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/book_author_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/book_title"
                android:layout_below="@+id/book_title"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="作者："
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/book_author_label"
                android:layout_alignBottom="@+id/book_author_label"
                android:layout_weight="1"
                android:text="民天"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/book_publish_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/book_author_label"
                android:layout_below="@+id/book_author_label"
                android:layout_weight="1"
                android:text="出版日期："
                android:textSize="12sp" />
            <TextView
                android:id="@+id/book_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book_publish_date_label"
                android:layout_alignBottom="@+id/book_publish_date_label"
                android:layout_weight="1"
                android:text="2020-8"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="88.9"
                android:textColor="@color/text_main"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>